modules = ["nodejs-20", "postgresql-16", "web"]
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

# Run takkinn keyrir production serverinn (node dist/index.js í gegnum npm start)
run = "bash -lc 'npm start'"

[nix]
channel = "stable-24_05"
packages = ["ps", "killall", "psmisc"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["sh", "-c", "npm start"]

[[ports]]
localPort = 5000
externalPort = 80

# Höldum þessum fyrir mögulega Vite-dev síðar, skaðar ekki þó enginn hlusti á þá núna
[[ports]]
localPort = 5173
externalPort = 3000

[[ports]]
localPort = 24678
externalPort = 3001

[env]
PORT = "5000"

[workflows]
runButton = ".replit run command"
