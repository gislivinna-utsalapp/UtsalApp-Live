modules = ["nodejs-20", "web", "postgresql-16"]
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

# Run takkinn keyrir bæði server og Vite
run = "bash -lc 'npx tsx server/index.ts & npx vite --host 0.0.0.0 --port 5173 --strictPort'"

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = [
  "bash",
  "-lc",
  "npx tsx server/index.ts & npx vite preview --host 0.0.0.0 --port 5173 --strictPort",
]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 3000

[[ports]]
localPort = 24678
externalPort = 3001

[env]
PORT = "5000"

[workflows]
runButton = ".replit run command"
